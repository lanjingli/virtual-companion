<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="?attr/selectableItemBackground"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/itemEventText"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:drawableLeft="@drawable/ic_calendar_black_24dp"
            android:drawablePadding="8sp"
            android:gravity="center_vertical"
            tools:text="The quick brown fox jumps over the lazy dog" />
        <Button
            android:id="@+id/btDeleteEvent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/baseline_delete_24"/>
    </LinearLayout>

</FrameLayout>